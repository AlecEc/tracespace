{
  "extends": ["config:base", ":prNotPending", ":unpublishSafe"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "eslint packages",
      "packagePatterns": ["eslint"]
    },
    {
      "groupName": "test packages",
      "packagePatterns": ["chai", "enzyme"],
      "packageNames": [
        "mocha",
        "nyc",
        "proxyquire",
        "sinon",
        "snap-shot-it",
        "testdouble"
      ]
    },
    {
      "groupName": "webpack packages",
      "packagePatterns": ["webpack", "loader"],
      "packageNames": ["mini-css-extract-plugin"],
      "excludePackagePatterns": ["hot-loader"]
    },
    {
      "groupName": "react-hot-loader packages",
      "packageNames": ["react-hot-loader", "@hot-loader/react-dom"]
    }
  ]
}
